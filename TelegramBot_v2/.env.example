# ==============================================
# ТЗшник v2.0 - Environment Variables
# ==============================================
# Скопируй этот файл в .env и заполни значения

# ========== Telegram Bot ==========
TELEGRAM_BOT_TOKEN=your_bot_token_here
ADMIN_USER_ID=123456789
# Дополнительные админы (через запятую, например: 123456789,987654321)
ADMIN_IDS_STR=

# ========== AI Providers ==========
# Google Gemini - Fallback Provider
GEMINI_API_KEY=your_gemini_api_key_here

# ========== Payments ==========
# YooKassa (через BotFather Payments)
YOOKASSA_PROVIDER_TOKEN=your_yookassa_token_here

# ========== Database ==========
# По умолчанию используется SQLite в папке data/
DATABASE_URL=sqlite+aiosqlite:///data/database.sqlite

# ========== Application Settings ==========
# Режим отладки (true/false)
DEBUG=true

# Количество бесплатных ТЗ для новых пользователей
FREE_GENERATIONS=1

# Максимальное количество фото в одном запросе
MAX_PHOTOS=5

# ========== Timeouts (seconds) ==========
AI_TIMEOUT=60.0
VISION_TIMEOUT=90.0

# ========== Rate Limiting ==========
# Запросов в секунду для обычных сообщений
RATE_LIMIT_MESSAGES=1.0
# Запросов в секунду для callback
RATE_LIMIT_CALLBACKS=2.0
# Длительность бана при превышении лимита (секунды)
RATE_LIMIT_BAN_DURATION=60.0

# ========== Logging ==========
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Записывать логи в файл (true/false)
LOG_TO_FILE=true

# ========== Backup ==========
# Включить автоматические бэкапы (true/false)
ENABLE_AUTO_BACKUP=true
# Хранить дневных бэкапов
MAX_DAILY_BACKUPS=7
# Хранить недельных бэкапов
MAX_WEEKLY_BACKUPS=4
